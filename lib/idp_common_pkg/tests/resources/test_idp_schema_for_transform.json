{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "TestDocument",
    "x-aws-idp-document-type": "TestDocument",
    "type": "object",
    "description": "Test schema to verify transform handles all normalization rules",
    "$defs": {
        "Address": {
            "type": "object",
            "properties": {
                "street": {
                    "type": "string",
                    "description": "Street address"
                },
                "city": {
                    "type": "string",
                    "description": "City name"
                }
            }
        }
    },
    "properties": {
        "name": {
            "type": "string",
            "description": "Person name"
        },
        "address": {
            "$ref": "#/$defs/Address",
            "description": "Person address"
        },
        "tags": {
            "type": "array",
            "description": "List of tags",
            "items": {
                "type": "string"
            }
        },
        "scores": {
            "type": "array",
            "items": {
                "type": "number"
            }
        }
    }
}
