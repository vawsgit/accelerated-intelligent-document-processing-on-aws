{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "Payslip",
  "x-aws-idp-document-type": "Payslip",
  "type": "object",
  "description": "This document issued by an employer to an employee contains wages received by an employee for a given period. It usually contains the breakdown of each of the income and tax deductions items.",
  "$defs": {
    "Name": {
      "type": "object",
      "properties": {
        "FirstName": {
          "type": "string"
        },
        "MiddleName": {
          "type": "string",
          "description": "if available"
        },
        "LastName": {
          "type": "string"
        },
        "SuffixName": {
          "type": "string",
          "description": "Such as PhD, Msc., etc"
        }
      }
    },
    "Address": {
      "type": "object",
      "properties": {
        "Line1": {
          "type": "string",
          "description": "What is the address line 1?"
        },
        "Line2": {
          "type": "string",
          "description": "What is the address line 2?"
        },
        "State": {
          "type": "string",
          "description": "What is the state? Use the two letter code"
        },
        "City": {
          "type": "string",
          "description": "What is the city?"
        },
        "ZipCode": {
          "type": "string",
          "description": "What is the address zip code?"
        }
      }
    },
    "Item": {
      "type": "object",
      "properties": {
        "ItemDescription": {
          "type": "string",
          "description": "The tax item description text"
        },
        "YTD": {
          "type": "number",
          "description": "The YTD value"
        },
        "Period": {
          "type": "number",
          "description": "The value for this period"
        }
      }
    },
    "FederalTaxes": {
      "type": "object",
      "properties": {
        "ItemDescription": {
          "type": "string",
          "description": "The tax item description text"
        },
        "YTD": {
          "type": "number",
          "description": "The YTD value"
        },
        "Period": {
          "type": "number",
          "description": "The value for this period"
        }
      }
    },
    "StateTaxes": {
      "type": "object",
      "properties": {
        "ItemDescription": {
          "type": "string",
          "description": "The tax item description text"
        },
        "YTD": {
          "type": "number",
          "description": "The YTD value"
        },
        "Period": {
          "type": "number",
          "description": "The value for this period"
        }
      }
    },
    "CityTaxes": {
      "type": "object",
      "properties": {
        "ItemDescription": {
          "type": "string",
          "description": "The tax item description text"
        },
        "YTD": {
          "type": "number",
          "description": "The YTD value"
        },
        "Period": {
          "type": "number",
          "description": "The value for this period"
        }
      }
    }
  },
  "properties": {
    "PayPeriodStartDate": {
      "type": "string",
      "description": "What is the Pay Period Start Date? YYYY-MM-DD Format"
    },
    "PayPeriodEndDate": {
      "type": "string",
      "description": "What is the Pay Period End Date? YYYY-MM-DD Format"
    },
    "PayDate": {
      "type": "string",
      "description": "What is the Pay Date? YYYY-MM-DD Format"
    },
    "EmployeeName": {
      "$ref": "#/$defs/Name",
      "instruction": "-"
    },
    "EmployeeAddress": {
      "$ref": "#/$defs/Address",
      "instruction": "-"
    },
    "CompanyAddress": {
      "$ref": "#/$defs/Address",
      "instruction": "-"
    },
    "FederalFilingStatus": {
      "type": "string",
      "description": "What is the Federal Filing Status? If available"
    },
    "StateFilingStatus": {
      "type": "string",
      "description": "What is the State Filing Status? (If available)"
    },
    "CurrentGrossPay": {
      "type": "number",
      "description": "What is the Current Gross Pay?"
    },
    "YTDGrossPay": {
      "type": "number",
      "description": "What is the YTD Gross Pay?"
    },
    "CurrentNetPay": {
      "type": "number",
      "description": "What is the Current Net Pay?"
    },
    "YTDNetPay": {
      "type": "number",
      "description": "What is the YTD Net Pay?"
    },
    "RegularHourlyRate": {
      "type": "number",
      "description": "What is the Regular Hourly Rate? (if available)"
    },
    "HolidayHourlyRate": {
      "type": "number",
      "description": "What is the Holiday Hourly Rate? (if available)"
    },
    "YTDFederalTax": {
      "type": "number",
      "description": "What is the YTD Federal Taxes amount?"
    },
    "YTDStateTax": {
      "type": "number",
      "description": "What are the YTD State Taxes?"
    },
    "is_ytd_gross_pay_highest": {
      "type": "boolean",
      "description": "Is the YTD Gross Pay the largest amount in the entire paystub?"
    },
    "FederalTaxes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/FederalTaxes"
      },
      "description": "-"
    },
    "StateTaxes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/StateTaxes"
      },
      "description": "-"
    },
    "EmployeeNumber": {
      "type": "string",
      "description": "What is the employee number?"
    },
    "PayrollNumber": {
      "type": "string",
      "description": "What is the payroll number?"
    },
    "CityTaxes": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/CityTaxes"
      },
      "description": "-"
    },
    "YTDCityTax": {
      "type": "number",
      "description": "What are the YTD City Taxes?"
    },
    "CurrentTotalDeductions": {
      "type": "number",
      "description": "What are the current total deductions?"
    },
    "YTDTotalDeductions": {
      "type": "number",
      "description": "What are the YTD total deductions?"
    },
    "is_gross_pay_valid": {
      "type": "boolean",
      "description": "Is the YTD gross pay the largest dollar amount value on the paystub?"
    },
    "are_field_names_sufficient": {
      "type": "boolean",
      "description": "Are field names / key values sufficient for any validation?"
    },
    "currency": {
      "type": "string",
      "description": "What currency is used in this document? CAD, USD, EUR, etc."
    }
  }
}